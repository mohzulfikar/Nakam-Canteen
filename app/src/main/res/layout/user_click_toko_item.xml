<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_menu_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imgList"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_baseline_store_24" />

                <TextView
                    android:id="@+id/tv_menu_nama"
                    android:layout_width="181dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"

                    android:layout_marginStart="24dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="17dp"
                    android:layout_toEndOf="@+id/imgList"
                    android:text="Nama Menu"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_menu_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_menu_nama"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="17dp"
                    android:layout_marginBottom="17dp"
                    android:layout_toEndOf="@+id/imgList"
                    android:text="Harga" />

                <ImageButton
                    android:id="@+id/btn_rmv_jml_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="163dp"
                    android:layout_marginTop="58dp"
                    android:layout_toEndOf="@+id/imgList"
                    android:background="@color/colorPrimary"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:src="@drawable/ic_remove_shopping_cart"
                    android:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btn_add_jml_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="226dp"
                    android:layout_marginTop="58dp"
                    android:layout_toEndOf="@+id/imgList"
                    android:background="@color/colorPrimary"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:src="@drawable/ic_add_shopping"
                    android:tint ="@android:color/white" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>